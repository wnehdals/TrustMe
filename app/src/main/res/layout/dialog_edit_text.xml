<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rect_radius_16_ffffff">
        <TextView
            android:id="@+id/edit_text_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="가나다라마바사"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="48dp"/>
        <EditText
            android:id="@+id/edit_text_dialog_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="32dp"
            app:layout_constraintTop_toBottomOf="@+id/edit_text_dialog_title"
            android:layout_marginTop="19dp"/>
        <View
            android:id="@+id/edit_text_divide_line_1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_f1f3f5"
            android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/edit_text_dialog_et"/>
        <View
            android:id="@+id/edit_text_divide_line_2"
            android:layout_width="1dp"
            android:layout_height="47dp"
            app:layout_constraintTop_toBottomOf="@+id/edit_text_divide_line_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/color_f1f3f5"/>
        <TextView
            android:id="@+id/edit_text_dialog_cancel"
            android:layout_width="0dp"
            android:layout_height="47dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/edit_text_divide_line_2"
            android:text="@string/str_cancel"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/color_acb5bd"
            app:layout_constraintTop_toBottomOf="@+id/edit_text_divide_line_1"/>
        <TextView
            android:id="@+id/edit_text_dialog_input"
            android:layout_width="0dp"
            android:layout_height="47dp"
            app:layout_constraintStart_toEndOf="@+id/edit_text_divide_line_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_text_divide_line_1"
            android:text="@string/str_input"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/black"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>