<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.write.WriteFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/write_cl"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <ImageView
                android:id="@+id/write_back_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_left_arrow_000000"
                android:paddingHorizontal="16dp"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/write_store_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/write_back_button"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                tools:text="맥도날드"/>
            <TextView
                android:id="@+id/write_complete_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/str_complete"
                android:enabled="false"
                app:layout_constraintEnd_toEndOf="parent"
                android:gravity="center_vertical"
                android:layout_marginEnd="16dp"
                android:textSize="18sp"
                android:textColor="@color/color_ccd4d8"
                app:layout_constraintTop_toTopOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <View
            android:id="@+id/write_divide_line_1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@+id/write_cl"
            android:background="@color/color_f1f3f5"/>
        <EditText
            android:id="@+id/write_goods_name_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="8dp"
            android:background="@null"
            android:maxLines="1"
            android:hint="@string/str_please_input_food_name"
            app:layout_constraintTop_toBottomOf="@+id/write_divide_line_1"
            app:layout_constraintBottom_toTopOf="@+id/write_divide_line_2"/>
        <View
            android:id="@+id/write_divide_line_2"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="16dp"
            android:background="@color/color_f1f3f5"
            app:layout_constraintTop_toBottomOf="@+id/write_goods_name_et"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/gallery_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@+id/write_divide_line_2"
            app:layout_constraintBottom_toTopOf="@+id/write_edit_text"/>
        <EditText
            android:id="@+id/write_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:paddingEnd="16dp"
            android:hint="@string/str_please_input_review"
            android:inputType="textMultiLine|textNoSuggestions"
            app:layout_constraintTop_toBottomOf="@+id/gallery_recyclerview"/>
        <View
            android:id="@+id/write_divide_line_3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="60dp"
            android:background="@color/color_f1f3f5"/>
        <ImageView
            android:id="@+id/write_camera_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_photo_camera_24"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/write_divide_line_3"/>
        <ImageView
            android:id="@+id/write_gallery_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_gallery_24"
            app:layout_constraintTop_toTopOf="@+id/write_camera_button"
            app:layout_constraintStart_toEndOf="@+id/write_camera_button"
            android:layout_marginStart="24dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>